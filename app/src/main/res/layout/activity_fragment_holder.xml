<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Activities.FragmentHolder">

    <fragment
        android:id="@+id/main_nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/main_nav"
        app:layout_constraintBottom_toTopOf="@id/main_bottom_nav_view"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/main_bottom_nav_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d2fcfa"
        android:foregroundGravity="bottom"
        app:itemIconSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:itemIconTint="@drawable/navigationselector"
        app:menu="@menu/menu" />
</androidx.constraintlayout.widget.ConstraintLayout>