<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#89abb5"
    android:backgroundTint="#d2fcfa"
    tools:context=".HomeScrolled">

    <Button
        android:layout_width="200dp"
        android:layout_height="59dp"
        android:layout_marginTop="124dp"
        android:alpha="0.8"
        android:background="@drawable/round"
        android:gravity="center"
        android:text="Personal-Branding"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.919"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/mountains" />

    <ImageView
        android:id="@+id/mountains"
        android:layout_width="236dp"
        android:layout_height="158dp"
        android:layout_marginTop="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/maountains"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/line1"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:rotation="180"
        android:rotationY="180"
        android:scaleType="fitXY"
        android:src="@drawable/line"
        app:layout_constraintBottom_toBottomOf="@id/mountains"
        app:layout_constraintEnd_toStartOf="@id/mountains" />

    <ImageView
        android:id="@+id/mindIcon"
        android:layout_width="248dp"
        android:layout_height="200dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/mind_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mountains" />

    <ImageView
        android:id="@+id/line2"
        android:layout_width="50dp"
        android:layout_height="123dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/line"
        app:layout_constraintEnd_toStartOf="@id/mindIcon"
        app:layout_constraintTop_toBottomOf="@id/line1" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/lines"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/mindIcon"
        app:layout_constraintTop_toTopOf="@id/mindIcon" />

    <ImageView
        android:id="@+id/line3"
        android:layout_width="269dp"
        android:layout_height="155dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="80dp"
        android:rotation="270"
        android:rotationX="180"
        android:scaleType="fitCenter"
        android:src="@drawable/line"
        app:layout_constraintStart_toStartOf="@id/mindIcon"
        app:layout_constraintTop_toTopOf="@id/mindIcon" />

    <ImageView
        android:id="@+id/line4"
        android:layout_width="95dp"
        android:layout_height="127dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="37dp"
        android:rotationY="180"
        android:src="@drawable/line"
        app:layout_constraintEnd_toEndOf="@id/line3"
        app:layout_constraintTop_toTopOf="@id/line3" />

    <ImageView
        android:id="@+id/tree"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:src="@drawable/tree"
        app:layout_constraintBottom_toBottomOf="@id/line4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/line4" />

    <ImageView
        android:id="@+id/selfIcon"
        android:layout_width="166dp"
        android:layout_height="119dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="108dp"
        android:src="@drawable/self_awarness_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mindIcon" />

    <ImageView
        android:id="@+id/clouds"
        android:layout_width="86dp"
        android:layout_height="68dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/clouds"
        app:layout_constraintBottom_toBottomOf="@id/selfIcon"
        app:layout_constraintEnd_toStartOf="@id/selfIcon" />

    <ImageView
        android:id="@+id/line5"
        android:layout_width="284dp"
        android:layout_height="117dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="108dp"
        android:rotation="270"
        android:src="@drawable/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/selfIcon" />

    <TextView
        android:id="@+id/personalBranding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="___________"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@id/line5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/line5"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/mindMapping"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/round"
        android:gravity="center"
        android:text="Mind-Mapping"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/mindIcon"
        app:layout_constraintTop_toTopOf="@id/mindIcon" />

    <TextView
        android:id="@+id/selfAwareness"
        android:layout_width="177dp"
        android:layout_height="50dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="92dp"
        android:alpha="0.9"
        android:background="@drawable/round"
        android:gravity="center"
        android:text="Self-Awareness"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/selfIcon"
        app:layout_constraintTop_toTopOf="@id/selfIcon" />


</androidx.constraintlayout.widget.ConstraintLayout>