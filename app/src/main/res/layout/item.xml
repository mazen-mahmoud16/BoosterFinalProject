<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#d5fdfb"
    android:id="@+id/item"
    android:padding="16dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView9"
        android:layout_width="75dp"
        android:layout_height="63dp"
        app:layout_constraintTop_toTopOf="@id/item"
        app:layout_constraintStart_toStartOf="@id/item"
        app:layout_constraintBottom_toBottomOf="@id/item"
        android:layout_marginStart="10dp"


 />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textStyle="bold"
        tools:text="Hannah Tran"
        android:textColor="#1f314a"
        android:textSize="22dp"
        android:layout_marginStart="30dp"

        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:layout_constraintBottom_toTopOf="@id/points"/>

    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="24dp"

        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintBottom_toBottomOf="@id/imageView9"
        tools:text="120000 pts" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circleborder"
        android:gravity="center_horizontal"
        android:paddingTop="6dp"
        android:textColor="#d5d8dd"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/points"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:layout_constraintVertical_bias="0.642"
        tools:text="5" />

</androidx.constraintlayout.widget.ConstraintLayout>